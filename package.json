{
  "name": "inuit-boilerplate",
  "version": "1.0.0",
  "description": "A starter project for using the excellent InuitCSS framework",
  "repository": {
    "type": "git",
    "url": "git://github.com/john-cheesman/inuit-boilerplate.git"
  },
  "keywords": [
    "inuitcss",
    "sass",
    "scss",
    "inuit",
    "css3"
  ],
  "author": "John Cheesman",
  "license": "MIT",
  "bugs": {
    "url": "git://github.com/john-cheesman/inuit-boilerplate.git"
  },
  "dependencies": {
    "inuitcss": "^6.0.0-beta.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "clean-css": "^3.4.20",
    "cross-env": "^3.1.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.10.1",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.5.4"
  },
  "scripts": {
    "clean-styles": "rimraf web/css && mkdirp web/css",
    "build:development": "cross-env NODE_ENV=development npm run styles:development",
    "build:production": "cross-env NODE_ENV=production npm run styles:production",
    "prestyles": "npm run clean-styles",
    "styles:development": "node-sass src/sass/main.scss | postcss -u autoprefixer > web/css/style.css",
    "styles:production": "node-sass src/sass/main.scss | postcss -u autoprefixer | cleancss > web/css/style.css"
  }
}
